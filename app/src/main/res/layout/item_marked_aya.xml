<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <LinearLayout
            android:id="@+id/iv_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="24dp"
            android:layout_alignBottom="@id/tv_layout">

            <ImageView
                android:id="@+id/bookmark_iv"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_bookmark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_toStartOf="@id/iv_layout">

            <TextView
                android:id="@+id/marked_ayah_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:ellipsize="end"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:text="شسشيشي"
                android:layout_gravity="end"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/marked_surah_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:text="@string/quran"
                android:gravity="start"
                android:layout_gravity="end"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="4dp"/>

</LinearLayout>
